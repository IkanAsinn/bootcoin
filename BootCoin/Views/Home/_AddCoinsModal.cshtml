@model UsersGroupModel

<div class="modal fade" id="add-coin-modal-@Model.ParticipantID" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Add Coins for @Model.ParticipantName</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form asp-action="AddCoins" method="post">
          <input type="hidden" value="@Model.ParticipantID" name="ParticipantID"/>
          <div class="modal-body">
            @*<button class="sub">-</button>*@
            <input type="text" value="0" name="coinInput"/>
            @*<button class="plus">+</button>*@
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary fw-bold" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-warning fw-bold">Confirm</button>
          </div>
      </form>
    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        $('.sub').click(function () {
            let value = parseInt($('input').val());
            if (value > 0) {
                value--;
                $('input').val(value);
            }
        });
        $('.plus').click(function () {
            let value = parseInt($('input').val());
            value++;
            $('input').val(value);
        });
    });
</script>