@model List<UsersGroupModel>

<div class="col-md-12 mb-3">
    <div class="card mb-3 p-3">
        <div class="row align-items-center">
            <div class="col-md-2">
                <img src="https://images.tokopedia.net/img/cache/900/VqbcmM/2022/4/27/6417592e-58b4-4073-acd9-53ccabf8b6d0.jpg" class="img-fluid rounded" style="height: 10vh;">
            </div>
            <div class="col-md-2">
                <h4 class="card-title">Group <span id="group-name">@Model.FirstOrDefault().Group</span></h4>
            </div>
            <div class="col-md-2">
                <p class="card-text">Total Costs</p>
                <h4 class="card-text"><span id="group-total-coins">@Model.FirstOrDefault().TotalCoins</span></h4>
            </div>
            <div class="col-md-2">
                <p class="card-text">Percentage</p>
                <h4 class="card-text">N/A</h4>
            </div>
            <div class="col-md-2">
                <p class="card-text">Total Member</p>
                <h4 class="card-text">@Model.FirstOrDefault().TotalMember</h4>
            </div>
            <div class="col-md-2">
                <p class="card-text">Rank</p>
                <h4 class="card-text">@Model.FirstOrDefault().Rank</h4>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12 mb-3">
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col" class="text-center">Coin Obtained</th>
                        <th scope="col" class="text-center">Redeemed Coin</th>
                        <th scope="col" class="text-center">Coin Remained</th>
                        <th scope="col" class="text-center">Add Coin</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <td>
                                <img src="@user.ImagePath" class="img-fluid me-2" alt="icon_user" style="height: 5vh;">
                                @user.ParticipantName
                            </td>
                            <td class="text-center">@user.CoinsObtained</td>
                            <td class="text-center">@user.CoinsRedeemed</td>
                            <td class="text-center">@user.CoinsRemained</td>
                            <td class="text-center">
                                <button class="add-btn border-0 bg-transparent" type="button" data-bs-toggle="modal" data-bs-target="#add-coin-modal-@user.ParticipantID" data-url="@Url.Action($"AddCoins/{user.ParticipantID}")">
                                    <i class="bi bi-plus-circle-fill fs-4"></i>
                                </button>
                                @await Html.PartialAsync("_AddCoinsModal", user)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <button class="bg-warning" type="button" data-bs-toggle="modal" data-bs-target="#add-user-@Model.FirstOrDefault().GroupID">Add User</button>
            <div class="modal fade" id="add-user-@Model.FirstOrDefault().GroupID" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalLabel">Add User for Group @Model.FirstOrDefault().Group</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form asp-action="AddUser" method="post">
                            <input type="hidden" value="@Model.FirstOrDefault().GroupID" name="GroupID"/>
                            <div class="modal-body">
                                <label>Full Name</label>
                                @*<button class="sub">-</button>*@
                                <input type="text" value="" name="FullName"/>
                                @*<button class="plus">+</button>*@

                                <label> <img src="~/images/Add File.png"> </label>
                                <input type="file" value="" id="image" style="display: none"/>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>