@model BootCoin.Models.ChangeInfoModel

<form class="position-relative" asp-action="ChangeInfo" asp-controller="Profile" method="post">
    <div class="h4 fw-bold border-bottom border-dark border-3 mb-3">
        Edit Profile
    </div>

    <div class="h6 fw-bold mb-3" >
    <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control border-dark border-2 bg-light" style="width: 50vw;" id="name" value="@User.FindFirst("AdminName").Value" asp-for="Name" required>
    </div>

    <div class="h6 fw-bold mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control border-dark border-2 bg-light" style="width: 50vw;" id="email" value="@User.Identity.Name" asp-for="Email" required>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-warning m-3">Confirm Change</button>
    </div>
</form>