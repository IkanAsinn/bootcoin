@model BootCoin.Models.ChangePhotoModel

<form method="post" asp-action="ChangePhoto" asp-controller="Profile" enctype="multipart/form-data">
<div class="row justify-content-center p-0">
    <div class="col">
        <div class="card m-3" style="min-width: 20vw; min-height: 45vh;">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <img src="@User.FindFirst("ImagePath").Value" style="width: 150px; height: 150px; object-fit: cover;">

                <div class="h5 fw-bold m-2">@User.FindFirst("AdminName").Value</div>

                 <div class="d-flex">
                    <button type="submit" class="btn btn-warning">Upload Photo</button>
                     <label for="image"> <img src="~/images/Add File.png"> </label>
                    <input id="image" asp-for="Photo" style="display:none" />

                 </div>
            </div>
        </div>
    </div>
</form>